<tns:HumanTaskCoordinationConfiguration xmlns:tns="http://wso2.org/bps/b4p/coordination/config">
    <!-- BPEL4PEOPLE Coordination configuration -->
    <tns:Enable>false</tns:Enable>

    <!--Task Engine's protocol handler related configuration -->
    <tns:HumanTaskEngineProtocolHandler>
        <!-- Task protocol handler authentication -->
        <tns:Authentication>
            <tns:Username>admin</tns:Username>
            <tns:Password>admin</tns:Password>
        </tns:Authentication>
    </tns:HumanTaskEngineProtocolHandler>
    <tns:PersistenceConfig>
        <tns:DAOConnectionFactoryClass>org.wso2.carbon.bpel.b4p.coordination.dao.jpa.openjpa.HTCoordinationDAOConnectionFactoryImpl</tns:DAOConnectionFactoryClass>
        <tns:GenerateDdl>false</tns:GenerateDdl>
        <tns:ShowSql>false</tns:ShowSql>
    </tns:PersistenceConfig>
</tns:HumanTaskCoordinationConfiguration>