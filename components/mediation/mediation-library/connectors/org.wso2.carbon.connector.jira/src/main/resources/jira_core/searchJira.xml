<template xmlns="http://ws.apache.org/ns/synapse" name="searchJQL">
	<parameter name="query" description="the search query to be executed as a String" />
	<parameter name="maxResult" description="maxium results to be shown" />
	<parameter name="startFrom" description="starts from" />

	<sequence>
		<property name="Accept" value="application/json" scope="transport" />
		<property name="messageType" value="application/json" scope="axis2" />
		<property name="uri.var.jira.jqlQuery" expression="$func:query" />
		<property name="uri.var.jira.max.result" expression="$func:maxResult" />
		<filter xpath="get-property('uri.var.jira.max.result') = ''">
			<then>
				<property name="uri.var.jira.max.result" value="50" />
			</then>
		</filter>
		<property name="uri.var.jira.start.from" expression="$func:startFrom" />
		<filter xpath="get-property('uri.var.jira.start.from') = ''">
			<then>
				<property name="uri.var.jira.start.from" value="0" />
			</then>
		</filter>
		<log level="custom">
			<property name="uri.var.jira.jqlQuery" expression="$func:query" />
			<property name="uri.var.jira.max.result" expression="$func:maxResult" />
			<property name="uri.var.jira.start.from" expression="$func:startFrom" />
			<property name="Authorization" expression="$trp:Authorization" />
			<property name="uri.var.jira.url" expression="$ctx:uri.var.jira.url" />
			<property name="uri.var.jira.start.from" expression="$func:maxResult" />
			<property name="uri.var.jira.max.result" expression="$func:startFrom" />
		</log>
		<send buildmessage="true" contiunation="true">
			<endpoint>
				<http method="get"
					uri-template="https://{uri.var.jira.url}/{uri.var.jira.context}/rest/api/2/search?jql={uri.var.jira.jqlQuery}&amp;maxResults={uri.var.jira.max.result}&amp;startAt={uri.var.jira.start.from}" />
			</endpoint>
		</send>

	</sequence>
</template>


