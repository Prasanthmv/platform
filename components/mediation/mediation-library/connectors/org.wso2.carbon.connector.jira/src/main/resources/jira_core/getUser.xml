<template xmlns="http://ws.apache.org/ns/synapse" name="getUser">
	<parameter name="username"
		description="the username of the user for whom we require details" />

	<sequence>
		<property name="uri.var.username" expression="$func:username" />
		<property name="messageType" value="application/json" scope="axis2" />
		<property name="Accept-Encoding" action="remove" scope="transport" />
		<send buildmessage="true" contiunation="true">
			<endpoint>
				<http method="get"
					uri-template="https://{uri.var.jira.url}/{uri.var.jira.context}/rest/api/2/user?username={uri.var.username}" />
			</endpoint>
		</send>
		
	</sequence>
</template>
