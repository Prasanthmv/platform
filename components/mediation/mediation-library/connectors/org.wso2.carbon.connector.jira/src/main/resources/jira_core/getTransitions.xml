<template xmlns="http://ws.apache.org/ns/synapse" name="getTransitions">

	<parameter name="issueIdOrKey" description="a String containing the issue id." />

	<sequence>
		<property name="uri.var.issueId" expression="$func:issueIdOrKey" />
		<property name="messageType" value="application/json" scope="axis2" />
		<property name="Accept-Encoding" action="remove" scope="transport" />

		<send continuation="true">
			<endpoint>
				<http method="get"
					uri-template="https://{uri.var.jira.url}/{uri.var.jira.context}/rest/api/2/issue/{uri.var.issueId}/transitions" />
			</endpoint>
		</send>



	</sequence>

</template>

