<template xmlns="http://ws.apache.org/ns/synapse" name="getProject">
	<parameter name="projectKey"
		description="a String containing of the unique key for a project" />

	<sequence>
		 <property name="uri.var.projectKey" expression="$func:projectKey" />
		 <property name="messageType" value="application/json" scope="axis2" />
		<send  buildmessage="true" contiunation="true">
			<endpoint>
				<http method="get" uri-template="https://{uri.var.jira.url}/{uri.var.jira.context}/rest/api/2/project/{uri.var.projectKey}" />
			</endpoint>
		</send>
	</sequence>
</template>
