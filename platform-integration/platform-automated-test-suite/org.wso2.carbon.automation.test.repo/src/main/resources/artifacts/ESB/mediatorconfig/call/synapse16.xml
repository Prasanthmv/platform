<!--

Call mediator placed in a sequence which is invoked by a task.

Console Log
===========
STATE = SEQ1 S1
STATE = SEQ2 S1
STATE = SEQ2 S2
STATE = SEQ1 S2
STATE = SEQ1 S3

-->


<definitions xmlns="http://ws.apache.org/ns/synapse">

   <endpoint name="EP">
      <address uri="http://localhost:9000/services/SimpleStockQuoteService"/>
   </endpoint>

   <sequence name="SEQ1">
      <log level="custom">
         <property name="STATE" value="SEQ1 S1"/>
      </log>
      <sequence key="SEQ2"/>
      <log level="custom">
         <property name="STATE" value="SEQ1 S2"/>
      </log>
      <header name="Action" value="urn:getQuote"/>
      <payloadFactory>
         <format>
            <m0:getQuote xmlns:m0="http://services.samples">
               <m0:request>
                  <m0:symbol>SEQ1</m0:symbol>
               </m0:request>
            </m0:getQuote>
         </format>
         <args/>
      </payloadFactory>
      <call>
         <endpoint key="EP"/>
      </call>
      <log level="custom">
         <property name="STATE" value="SEQ1 S3"/>
      </log>
   </sequence>

   <sequence name="SEQ2">
      <log level="custom">
         <property name="STATE" value="SEQ2 S1"/>
      </log>
      <call>
         <endpoint key="EP"/>
      </call>
      <log level="custom">
         <property name="STATE" value="SEQ2 S2"/>
      </log>
   </sequence>

   <task name="SampleInjectToSequenceTask"
         class="org.apache.synapse.startup.tasks.MessageInjector"
         group="synapse.simple.quartz">
      <trigger count="1" interval="5"/>
      <property name="message">
         <m0:getQuote xmlns:m0="http://services.samples">
            <m0:request>
               <m0:symbol>TASK</m0:symbol>
            </m0:request>
         </m0:getQuote>
      </property>
      <property name="injectTo" value="sequence"/>
      <property name="sequenceName" value="SEQ1"/>
   </task>

</definitions>